{
    "$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true
        }
    },
    "formatter": {
        "enabled": true,
        "formatWithErrors": true,
        "indentWidth": 4,
        "indentStyle": "space",
        "lineEnding": "lf",
        "lineWidth": 96,
        "include": ["./**/*.json", "./**/*.js", "./**/*.ts"]
    }
}
